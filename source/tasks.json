{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "codegen - Run all codegen scripts",
      "type": "shell",
      "command": "node ${workspaceFolder}/codegen/components && node ${workspaceFolder}/codegen/pages && touch ${workspaceFolder}/source/scss/style.scss",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "stateful - Convert to stateful component",
      "type": "shell",
      "command": "creuna stateful ${file}",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "stateless - Convert to stateless component",
      "type": "shell",
      "command": "creuna stateless ${file}",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "component - Create new component",
      "type": "shell",
      "command": "creuna component",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "page - Create new static site page",
      "type": "shell",
      "command": "creuna page",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "rename - Rename component",
      "type": "shell",
      "command": "creuna rename ${file}",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "lib - Add component from library",
      "type": "shell",
      "command": "creuna lib",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}
